

#include <iostream>
#include <climits>
using namespace std;

void Max_Ele_Array(int arr[] , int size){
    
    int maxElement = INT_MIN;
    
    for(int i=0 ; i<size ; i++){
        if(arr[i] > maxElement){
        maxElement = arr[i];}
    }
    
    cout<<maxElement;
    
}



void Min_Ele_Array(int arr[] , int size){
    
    int minElement = INT_MAX;
    
    for(int i=0 ; i<size ; i++){
        if(arr[i] < minElement){
        minElement = arr[i];}
    }
    
    cout<<minElement;
    
}



int
main ()
{

  int arr[] = { 3, 4, 5, 6, 7, 8 };
  int size = 6;
//   Min_Ele_Array (arr, size);
  Max_Ele_Array (arr, size);




  return 0;
}
